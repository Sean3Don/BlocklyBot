<toolbox>
    <category name="Move" colour="160">
        <block type="robot_move_forward_internal">
            <field name="VALUE">1</field>
        </block>
        <block type="robot_move_backward_internal">
            <field name="VALUE">1</field>
        </block>
        <block type="robot_turn_right_internal">
            <field name="DIR">turnRight</field>
        </block>
        <block type="robot_turn_left_internal">
            <field name="DIR">turnRight</field>
        </block>
        <block type="robot_emote">
            <field name="VALUE">1</field>
            <field name="TYPE">shake</field>
        </block>
        <block type="robot_stop">
        </block>
    </category>

    <category name="Audio" colour="65">
        <block type="audio_play">
            <field name="SOUND">laser</field>
        </block>
        <block type="audio_tone">
            <field name="FREQ">400</field>
            <field name="TIME">1</field>
        </block>
        <block type="audio_note">
            <field name="NOTE">C</field>
        </block>
        <block type="speech_speak">
            <field name="TEXT">hello</field>
        </block>
        <block type="speech_listen">
            <field name="CMD">moveForward</field>
        </block>
        <block type="speech_listen_text">
            <field name="CMD">command</field>
        </block>
    </category>

    <category name="Control" colour="120">
        <block type="control_repeat">
            <field name="TIMES">4</field>
        </block>
        <block type="controls_repeat_ext">
            <value name="TIMES">
                <shadow type="math_number">
                    <field name="NUM">10</field>
                </shadow>
            </value>
        </block>
        <block type="controls_whileUntil">
            <value name="BOOL">
                <shadow type="logic_boolean">
                    <field name="BOOL">TRUE</field>
                </shadow>
            </value>
        </block>
        <block type="controls_for">
            <value name="FROM">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="TO">
                <shadow type="math_number">
                    <field name="NUM">10</field>
                </shadow>
            </value>
            <value name="BY">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="controls_if"></block>
        <block type="logic_compare"></block>
        <block type="logic_operation"></block>
        <block type="logic_negate"></block>
        <block type="logic_boolean"></block>
    </category>

    <category name="Math" colour="230">
        <block type="math_number"></block>
        <block type="math_change">
            <value name="DELTA">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="math_arithmetic">
            <value name="A">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="B">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="math_random_int">
            <value name="FROM">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="TO">
                <shadow type="math_number">
                    <field name="NUM">100</field>
                </shadow>
            </value>
        </block>
    </category>

    <category name="Variables" colour="330">
        <block type="variables_get"></block>
        <block type="variables_set">
            <value name="VALUE">
                <shadow type="math_number"></shadow>
            </value>
        </block>
    </category>
</toolbox>
