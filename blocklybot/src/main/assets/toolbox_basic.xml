<toolbox>
    <category name="Robot" colour="160">
        <block type="robot_move_forward_internal">
            <field name="VALUE">1</field>
        </block>
        <block type="robot_move_backward_internal">
            <field name="VALUE">1</field>
        </block>
        <block type="robot_turn_right_internal">
            <field name="DIR">turnRight</field>
        </block>
        <block type="robot_turn_left_internal">
            <field name="DIR">turnRight</field>
        </block>
        <block type="robot_emote">
            <field name="VALUE">1</field>
            <field name="TYPE">shake</field>
        </block>
        <block type="robot_stop">
        </block>
    </category>
    <category name="Speech" colour="140">
        <block type="speech_speak">
            <field name="TEXT">hello</field>
        </block>
        <block type="speech_listen">
            <field name="CMD">moveForward</field>
        </block>
        <block type="speech_listen_text">
            <field name="CMD">command</field>
        </block>
    </category>
    <category name="Audio" colour="140">
        <block type="audio_play">
            <field name="SOUND">laser</field>
        </block>
        <block type="audio_play_internal">
            <field name="SOUND">laser</field>
        </block>
    </category>
    <category name="Loops" colour="120">
        <block type="robot_repeat_internal">
            <field name="TIMES">4</field>
        </block>
    </category>
</toolbox>
