<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundbutton"
                android:src="@drawable/ic_arrow_upward_black_24dp"
                android:onClick="onClick"
                android:id="@+id/up" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/left" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundbutton"
                android:src="@drawable/ic_cancel_black_24dp"
                android:onClick="onClick"
                android:id="@+id/stop" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundbutton"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:onClick="onClick"
                android:id="@+id/right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center_horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundbutton"
                android:onClick="onClick"
                android:src="@drawable/ic_arrow_downward_black_24dp"
                android:id="@+id/down" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Shake\n"
                android:onClick="onClick"
                android:id="@+id/shake" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Bounce\n"
                android:onClick="onClick"
                android:id="@+id/bounce" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Wobble\nLeft"
                android:onClick="onClick"
                android:id="@+id/wobble_left" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Wobble\n"
                android:onClick="onClick"
                android:id="@+id/wobble" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Wobble\nRight"
                android:onClick="onClick"
                android:id="@+id/wobble_right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Tap\nLeft"
                android:onClick="onClick"
                android:id="@+id/tap_left" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Tap\nFeet"
                android:onClick="onClick"
                android:id="@+id/tap_feet" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Tap\nRight"
                android:onClick="onClick"
                android:id="@+id/tap_right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Shake\nLeft"
                android:onClick="onClick"
                android:id="@+id/shake_left" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Shake\nLegs"
                android:onClick="onClick"
                android:id="@+id/shake_legs" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/roundbutton"
                android:textSize="15sp"
                android:text="Shake\nRight"
                android:onClick="onClick"
                android:id="@+id/shake_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
